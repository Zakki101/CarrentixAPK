<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/off_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Red Bar -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redtopbar"
            android:paddingTop="12dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Rent Car"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/league_spartan"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp">

                <Button
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrleft" />
            </RelativeLayout>
        </FrameLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Car Info -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_pill_default">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp">

                        <TextView
                            android:id="@+id/cartitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:text="Car Name"
                            android:paddingTop="17dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cartitle">

                            <ImageView
                                android:id="@+id/map"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:padding="3dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/carAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/map"
                                android:textSize="14sp"
                                android:fontFamily="@font/alata"
                                android:text="Address"
                                android:paddingBottom="15dp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/carImage"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:src="@drawable/avanza"
                            android:background="@drawable/carbar"
                            android:scaleType="centerCrop"
                            android:layout_marginVertical="20dp"
                            android:clipToOutline="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </FrameLayout>

                <!-- Car Details Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Car Details"
                        android:textSize="16dp"
                        android:fontFamily="@font/league_spartan"
                        android:backgroundTint="@color/carrentix_red" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/info"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>

                <!-- Rent Details -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_pill_default">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="20dp"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:text="Set Rent Details" />

                        <!-- Start Date -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:text="Start"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="14sp"
                            android:paddingStart="12dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp">

                            <EditText
                                android:id="@+id/start_date_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Set Your Start Date"
                                android:background="@drawable/back_box_rounded"
                                android:padding="12dp"
                                android:focusable="false"
                                android:inputType="none"
                                android:textSize="14sp"
                                android:fontFamily="@font/alata"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="46dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/sidebutton"
                                android:padding="9dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/calendar" />
                        </RelativeLayout>

                        <!-- End Date -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:text="End"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:layout_marginTop="10dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp">

                            <EditText
                                android:id="@+id/end_date_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/back_box_rounded"
                                android:focusable="false"
                                android:fontFamily="@font/alata"
                                android:hint="Set Your End Date"
                                android:inputType="none"
                                android:padding="12dp"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="46dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/sidebutton"
                                android:padding="9dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/calendar" />
                        </RelativeLayout>

                        <!-- Insurance -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:text="Insurance"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:layout_marginTop="10dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp">

                            <Spinner
                                android:id="@+id/insurance_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/back_box_rounded"
                                android:padding="12dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:src="@drawable/arrow_down" />
                        </RelativeLayout>

                        <CheckBox
                            android:id="@+id/checkbox0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tandc"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginVertical="10dp"
                            android:fontFamily="@font/alata" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Renter Info -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_pill_default"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="30dp">

                        <!-- Name -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:text="Renter Name"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="14sp"
                            android:paddingStart="12dp" />

                        <EditText
                            android:id="@+id/renter_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:background="@drawable/back_box_rounded"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:hint="Enter Your Name" />

                        <!-- Phone -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:text="Phone Number"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:layout_marginTop="20dp" />

                        <EditText
                            android:id="@+id/phone_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:background="@drawable/back_box_rounded"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:hint="Enter Your Phone Number"
                            android:inputType="phone" />

                        <!-- Address -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:text="Address"
                            android:textStyle="bold"
                            android:fontFamily="@font/alata"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:layout_marginTop="20dp" />

                        <EditText
                            android:id="@+id/address_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/back_box_rounded"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold"
                            android:hint="Enter Your Address" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Rent Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backboard" />

        <Button
            android:id="@+id/rentnow"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="SEND REQUEST TO RENT"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:fontFamily="@font/league_spartan"
            android:backgroundTint="@color/carrentix_red" />
    </FrameLayout>
</FrameLayout>
