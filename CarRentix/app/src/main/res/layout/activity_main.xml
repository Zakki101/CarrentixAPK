<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/whole"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/off_grey"/>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="24dp">
                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/bglogo"
                    android:layout_toLeftOf="@id/carrentix"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/carrentix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrentix"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="25dp"
                    android:fontFamily="@font/league_spartan"/>
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:scaleType="centerInside"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/fotozakki"
                    android:clipToOutline="true"/>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backboard"
                    android:layout_marginTop="27dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:paddingVertical="13dp"
                        android:text="WELCOME, USER!"
                        android:fontFamily="@font/intro_rust"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/red_box_rounded"/>
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp">
                    <EditText
                        android:id="@+id/searchapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search"
                        android:paddingVertical="12dp"
                        android:paddingStart="60dp"
                        android:paddingEnd="20dp"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:background="@drawable/searchbar"
                        android:fontFamily="@font/alata"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/searchlogo"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"/>
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginStart="24dp">
                            <Button
                                android:id="@+id/filter"
                                android:layout_height="50dp"
                                android:layout_width="175dp"
                                android:text="FILTER"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/off_grey"
                                android:fontFamily="@font/intro_rust"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="14dp"
                                android:src="@drawable/funnel"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginEnd="24dp">
                            <Button
                                android:layout_height="50dp"
                                android:layout_width="175dp"
                                android:text="SORT"
                                android:layout_alignParentEnd="true"
                                android:backgroundTint="@color/off_grey"
                                android:fontFamily="@font/intro_rust"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="14dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/sort"/>
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latest Cars to Rent"
                        android:fontFamily="@font/alata"
                        android:textSize="19sp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Latest Available Cars to Rent"
                        android:layout_marginHorizontal="24dp"
                        android:fontFamily="@font/alata"
                        android:textSize="14sp"
                        android:textColor="@color/off_grey"/>
                </LinearLayout>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="2dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/smooth_corners"
            android:elevation="2dp">
            <TableRow>
                <ImageButton
                    android:id="@+id/homebut"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/home_use"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:elevation="2dp"/>
                <ImageButton
                    android:id="@+id/history"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/clock"
                    android:scaleType="fitCenter"
                    android:background="@null"/>
                <ImageButton
                    android:id="@+id/user"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/user"
                    android:scaleType="fitCenter"
                    android:background="@null"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>