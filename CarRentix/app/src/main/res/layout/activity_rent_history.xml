<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/off_grey">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="24dp">
                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/bglogo"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/carrentix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrentix"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="25dp"
                    android:fontFamily="@font/league_spartan" />
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:scaleType="centerInside"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/fotozakki"
                    android:clipToOutline="true" />
            </RelativeLayout>

            <!-- Title Board -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backboard" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Rental History"
                        android:fontFamily="@font/league_spartan"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </FrameLayout>

            <!-- Search Bar -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="14dp">
                    <EditText
                        android:id="@+id/searchapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search"
                        android:paddingVertical="12dp"
                        android:paddingStart="60dp"
                        android:paddingEnd="20dp"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:background="@drawable/searchbar"
                        android:fontFamily="@font/alata" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/searchlogo"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp" />
                </RelativeLayout>
            </FrameLayout>

            <!-- Filter and Sort Buttons -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginStart="24dp">
                            <Button
                                android:id="@+id/filter"
                                android:layout_height="50dp"
                                android:layout_width="175dp"
                                android:text="FILTER"
                                android:layout_alignParentStart="true"
                                android:backgroundTint="@color/off_grey"
                                android:fontFamily="@font/intro_rust" />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="14dp"
                                android:src="@drawable/funnel" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginEnd="24dp">
                            <Button
                                android:layout_height="50dp"
                                android:layout_width="175dp"
                                android:text="SORT"
                                android:layout_alignParentEnd="true"
                                android:backgroundTint="@color/off_grey"
                                android:fontFamily="@font/intro_rust" />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="14dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/sort" />
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </FrameLayout>

            <!-- Currently Rented Car Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Currently Rented Car"
                    android:fontFamily="@font/alata"
                    android:textSize="19sp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Car You Are Currently Renting"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/alata"
                    android:textSize="14sp"
                    android:textColor="@color/off_grey" />

                <!-- Placeholder for one card -->
                <FrameLayout
                    android:id="@+id/current_rent_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp" />
            </LinearLayout>

            <!-- Past Rented Cars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingBottom="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Past Rented Cars"
                    android:fontFamily="@font/alata"
                    android:textSize="19sp"
                    android:layout_marginHorizontal="24dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cars You Have Rented In The Past"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/alata"
                    android:textSize="14sp"
                    android:textColor="@color/off_grey" />

                <!-- RecyclerView for past rented cars -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/past_rents_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav Bar -->
    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="2dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/smooth_corners"
            android:elevation="2dp">
            <TableRow>
                <ImageButton
                    android:id="@+id/homebut"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/home"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:elevation="2dp" />
                <ImageButton
                    android:id="@+id/histbut"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/clock_use"
                    android:scaleType="fitCenter"
                    android:background="@null" />
                <ImageButton
                    android:id="@+id/usbut"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/user"
                    android:scaleType="fitCenter"
                    android:background="@null" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>
